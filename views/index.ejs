<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div>
      <% messages.forEach(item => { %>
          <div>
            <div>
              <p><%= item.user %></p>
              <p><%= item.added %></p>
            </div>
            <div>
              <p><%= item.text %></p>
            </div>
          </div>
      <% }); %>
    </div>
  </body>
</html>
